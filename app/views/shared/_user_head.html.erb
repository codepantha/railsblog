<div class="section">
  <div class="user_container_left">
    <img src=<%= @user.photo %> />
  </div>
  <div class="user_container_right">
    <a href=<%= user_path(@user) %>>
      <h2 class="author"><%= @user.name %></h2>
    </a>
    <span>Number of posts: <%= @user.posts.count %></span>
  </div>
</div>